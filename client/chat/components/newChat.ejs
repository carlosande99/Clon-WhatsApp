            </form>
            <%- include('./button', {
                isSvg: true,
                icon: 'users',
                extraClass: 'w-full p-2',
                group: false
            }) %>
            <%- include('./button', {
                isSvg: true,
                icon: 'user',
                extraClass: 'w-full p-2',
                group: false
            }) %>
            <span>Todos los contactos</span>
            <div id="contactos">
